<script type="text/javascript">
  function drk(){
    var d = document.getElementById("drk");
    var all = document.body;
    all.classList.toggle("darkmode");
    if (d.classList == "fa fa-toggle-off") {d.classList = "fa fa-toggle-on";d.title = "lightmode"} else {d.classList = "fa fa-toggle-off";d.title = "darkmode"}
  }
</script>

